{
  "manifest_version": 2,
  "name": "ReColor",
  "version": "0.1",
  "description": "Allows you to change the colors used in any Web page with the colors you want.",
  "icons": { "128": "paint-brush-icon.png" },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["config.js", "recolor.js"]
    }
  ]
}
